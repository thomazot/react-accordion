      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.7",
    "gh-pages": "^3.1.0",
    "ts-jest": "^26.4.4"
  }
